{
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "target": "es6",
        "lib": [
            "es6"
        ],
        "pretty": true,
        "rootDir": "src",
        "typeRoots": [
            "node_modules/@types",
            "typings"
        ],
        "sourceMap": true
        //"sourceRoot": "../src"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
    ]
}